.result
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    background-color transparent
    background-size cover
    display none
    z-index 5
    +below(801px)
        height 100%
        overflow scroll

    &.is-active
        display block

    &__content
        display flex
        flex-direction column
        justify-content center
        height 100vh
        align-items center
        position relative
        margin 0 auto
        z-index 1

    &__wrap
        position relative
        display flex
        flex-direction row
        justify-content center
        background-color $c-white
        border w(1) solid $c-pink
        width 100%

    &__chapter
        color $c-pink
        text-align center
        font-family $ff-Montserrat
        font-size w(44)
        font-weight 700
        text-transform uppercase
        +below(801px)
            font-size wm(44)

    &__text
        margin-top w(15)
        font-family $ff-Montserrat
        color $c-black
        font-size w(20)
        font-weight 700
        line-height normal
        text-transform uppercase
        text-align center
        +below(801px)
            margin-top wm(15)
            font-size wm(20)

    &__answer
        margin-left w(150)
        padding w(20) w(60)
        display flex
        flex-direction column
        justify-content center
        +below(801px)
            margin-left wm(0)
            padding w(20) w(60)

    &__title
        padding w(15) 0
        color $c-black
        font-family $ff-Montserrat-Medium
        font-size w(18)
        font-weight 500
        line-height w(32)
        text-align left
        text-transform uppercase
        +below(801px)
            padding wm(15) 0
            font-size wm(18)
            line-height wm(32)

    &__button
        background-color $c-pink
        color $c-white
        border-radius w(50)
        padding w(25) w(15)
        align-self center
        border none
        font-family $ff-Montserrat-Medium
        font-size w(18)
        font-weight 500
        line-height w(32)
        width w(300)
        +below(801px)
            font-size wm(18)
            line-height wm(32)
            width wm(300)

